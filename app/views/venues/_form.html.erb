<%= form_for(@venue) do |f| %>
  <%= render "shared/error_messages", :target => @venue %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class='form-group'>
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>
  <div class='form-group'>
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </div>
  <div class='form-group'>
    <%= f.label :area %>
    <%= f.text_field :area %>
    <p class='help'>For Area, use the nearest tube station unless there's something better</p>
  </div>
  <div class='form-group'>
    <p class='help'>If you leave Latitude and Longitude blank, they will be automatically calculated based on postcode</p>
    <%= f.label :lat, 'Latitude' %>
    <%= f.text_field :lat, :size => 15, :style => "float:left;", :class => "shortfield"%>
    <%= f.label :lng, 'Longitude', :class => "inline_label" %>
    <%= f.text_field :lng, :size => 15, :class => "shortfield"%>
    <%=link_to "(get from web)", "http://www.doogal.co.uk/LatLong.php"%>
  </div>
  <div class='form-group'>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>
  <div class='form-group actions'>
    <%= f.submit action, class: "button" %>
    <%= link_to 'Cancel', cancel_path, class: "button button-secondary" %>
    <%= conditional_delete_tag(@venue) %>
  </div>
<% end %>
