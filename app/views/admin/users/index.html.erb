<main class="page">
  <h1>Users</h1>
  <ul class="user-list">
    <div class="user-list-header">
      <div class="user-id">Facebook ID</div>
      <div>Name</div>
    </div>

    <% users.each do |user| %>
      <li class="user">
        <div class="user-data user-id">
          <div class="label">Facebook ID:</div>
          <div><%= user.id %></div>
        </div>
        <div class="user-data">
          <div class="label">Name:</div>
            <%= user.name %>
            <% if user.admin? %>
              (Admin)
            <% end %>
          </div>
        </div>
        <% unless user.current? %>
          <div class="actions">
            <%= link_to "Delete", admin_user_path(user), data: { turbo: true, turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "button button-smaller button-danger" %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</main>
