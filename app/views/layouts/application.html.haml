!!! 5
%html{ lang: "en-GB" }
  %head
    %title= content_for?(:title) ? yield(:title) : "Swing Out London - listings of Lindy Hop swing dance classes and socials"

    %meta{ "http-equiv" => "Content-Type",  content: "text/html; charset=utf-8" }/
    %meta{ name: "viewport",    content: "initial-scale=1" }/
    %meta{ name: "author",      content: "Duncan Stuart" }/
    %link{ rel: "author", href: "humans.txt" }/
    %meta{ name: "description", content: content_for?(:description) ? yield(:description) : "Swing Out London is a listing of weekly Lindy Hop classes, regular socials, swing gigs and vintage clubs" }/

    = csrf_meta_tag

    = javascript_include_tag :application
    = yield :script
    = yield :stylesheet

    %meta{ name: "msapplication-config", content: "none" }

    = yield :head

  = content_tag( :body, :class => "#{@controller_name} #{@action_name}") do
    -# = render partial: "admin_bar" if session[:authenticated]
    = content_for?(:content) ? yield(:content) : yield
